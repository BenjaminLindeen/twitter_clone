doctype html
html
    head
        title Contact Log
        include header.pug
        include navbar.pug
        table#contactlog(border='1')
            tr
                th Name
                th Email
                th Date
                th Department
                th Subscription
                th Delete
                th Time Till
            each contact in contactLog
                tr
                    td= contact.name
                    td= contact.email
                    td= contact.date
                    td= contact.department
                    td= contact.subscribe === 'yes' ? 'Yes' : 'No'
                    td
                        button.delete-btn(contact-id=contact.id) Delete
                    td#time-until= contact.timeTill